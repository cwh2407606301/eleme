body,html
  line-height: 1
  font-weight: 200
  font-family: 'PingFang Sc'
.clearfix
  display: inline-block
  &::after
    content: '.'
    display: block
    clear: both
    height: 0
    line-height: 0
    visibility: hidden
    
@media (min-device-pixel-ratio: 1.5)
	.border-1px
		&::after
			transform: scaleY(0.7)

@media (min-device-pixel-ratio)
	.border-1px
		&::after
			transform: scaleY(0.5) 	  
